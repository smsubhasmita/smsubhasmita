    <script>
        /* 
        JavaScript Data Types
        JavaScript variables can hold different data types: numbers, strings, objects and more:
        
        String 
        Number 
        Boolean 
        Undefined 
        Null 
        Object 
        Array 
        Function  
        
        */

        /**
         * The String Data Type
         * The string data type represents text data strings are created by a single or double quote around one or more characters
        */
        var a = 'Hi there!';  // using single quotes
        var b = "Hi there!";  // using double quotes
        var c = "Let's have a cup of coffee."; // single quote inside double quotes
        var d = 'He said "Hello" and left.';  // double quotes inside single quotes
        var e = 'We\'ll never give up.';     // escaping single quote with backslash */

        console.log(a);
        console.log(b);
        console.log(c);
        console.log(d);
        console.log(e);

        /**
         * The Boolean Data Type
         * There are only two values for the boolean data type: true or false. 
        /* */

        var isReading = true;   // yes, I'm reading
        var isSleeping = false; // no, I'm not sleeping
        var a = 2, b = 5, c = 10;

        console.log(b > a) // Output: true
        console.log(b > c) // Output: false 

